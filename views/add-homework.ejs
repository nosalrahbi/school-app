<% include partials/header.ejs %>
<% include partials/messages.ejs %>
    <div class="container">
        <div class="table-wrapper">
            <form class="add-bus-form" action="" method="post" enctype="multipart/form-data">
                <div class = "form-group row">
                    <label class="control-label col-sm-2" for = "id"><%= __("Homework Id") %></label>
                    <input type = "text" class = "form-control col-sm-6" name="id" id ="id" value="Auto generated" readonly>
                </div>
                <div class="form-group row">
                        <label class = "control-label col-sm-2" for = "Subject_id"><%= __("Subject Id") %></label>
                       <select name="subject_id" id="subject_id" class="browser-default custom-select col-sm-6">
                        <% subjects.forEach((subject, index) => { %> 
                            <option value="<%= subject.subject_id %>"><%= subject.subject_ename %> (<%= subject.subject_aname %>)</option>  
                        <% }) %> 
                       </select>
                </div> 
                <div class="form-group row">
                        <label class = "control-label col-sm-2" for = "class_id"><%= __("Class Id") %></label>
                       <select name="class_id" id="class_id" class="browser-default custom-select col-sm-6">
                        <% classes.forEach((clas, index) => { %> 
                            <option value="<%= clas.class_id %>"><%= clas.class_name %></option> 
                        <% }) %> 
                       </select>
                </div> 
                <div class = "form-group row">
                    <label class = "control-label col-sm-2" for = "homework"><%= __("Homework") %></label>
                    <input type = "text" class = "form-control col-sm-6" name="homework" id ="homework" required>
                </div>
                <div class = "form-group row">
                    <label class = "control-label col-sm-2" for = "task_date"><%= __("Task Date") %></label>
                    <input type = "date" class = "form-control col-sm-6" name="task_date" id ="task_date" required>
                </div>
                <div class="form-row"> 
                    <label class = "control-label col-sm-3" for = "save"></label>     
                    <button type="submit" class="btn btn-primary col-sm-4 float-right"><%= __("Save") %></button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
<% include partials/footer.ejs %>