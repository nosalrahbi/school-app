<% include partials/header.ejs %>
<% include partials/messages.ejs %>
<div class="container">  
    <% if (tables) { %>
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><%= __("Table Id") %></th>
                    <th scope="col"><%= __("Table Name") %></th>
                    <th scope="col"><%= __("Class") %></th>
                    <th scope="col"><%= __("Start Date") %></th>
                </tr>
            </thead>
            <tbody>
                <% tables.forEach((table, index) => { %>
                <tr>
                    <th scope="row"><a href="/viewTable/<%= table.id %>" rel="noopener"><%= table.id %></a></th>
                    <td><%= table.t_name %></td>
                    <td><%= table.class_id %></td>
                    <td><%= table.up_date %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
            <p class="text-center">No tables Found. Go <a href="/addTable">here</a> to add table</p>
        <% } %>
    </div>
</div>
<% include partials/footer.ejs %>