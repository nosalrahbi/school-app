<% include partials/header.ejs %>
<% include partials/messages.ejs %>
    <div class="container">
        <form class="add-bus-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="bus_id"><%= __("Bus ID") %></label>
                    <input type="number" class="form-control" name="bus_id" id="bus_id" value ="<%= bus.bus_id %>" placeholder="<%= bus.bus_id %>" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="bus_name"><%= __("Bus Name") %></label>
                    <input type="text" class="form-control" name="bus_name" id="bus_name" value="<%= bus.bus_name %>" placeholder="<%= bus.bus_name %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="driver"><%= __("Driver") %></label>
                    <input type="text" class="form-control" name="driver" id="driver"  value="<%= bus.driver %>" placeholder="<%= bus.driver %>">
                </div>
                <div class="form-group col-md-6">
                    <label for="drv_mobile"><%= __("Driver mobile") %></label>
                    <input type="number" class="form-control" name="drv_mobile" id="drv_mobile" value="<%= bus.drv_mobile %>" placeholder="<%= bus.drv_mobile %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="bus_super"><%= __("Supervisor") %></label>
                    <input type="text" class="form-control" name="bus_super" id="bus_super" value="<%= bus.bus_super %>" placeholder="<%= bus.bus_super %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="sup_mobile"><%= __("Supervisor mobile") %></label>
                    <input type="number" class="form-control" name="sup_mobile" id="sup_mobile" value="<%= bus.sup_mobile %>" placeholder="<%= bus.sup_mobile %>">
                </div>
            </div>    
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="area"><%= __("Area") %></label>
                    <input type="text" class="form-control" name="area" id="area" value="<%= bus.area %>" placeholder="<%= bus.area %>">
                </div>
            </div>  
            <div class="form-row text-center"> 
                <label class="col-sm-4"></label>    
                <button type="submit" class="btn btn-primary col-sm-4"><%= __("Save") %></button>
            </div>
        </form>
    </div>
</div>
</body>
<% include partials/footer.ejs %>