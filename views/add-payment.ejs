<% include partials/header.ejs %>
<% include partials/messages.ejs %>
<div class="container">
    <form class="add-payment-form" action="" method="post" enctype="multipart/form-data">
        <div class = "form-group row">
            <label class="control-label col-sm-2" for = "st_id"><%= __("Student Id") %></label>
            <input type = "number" class = "form-control col-sm-10" name="st_id" id ="st_id" value="<%= st_id %>" readonly>
        </div>
        <div class = "form-group row">
            <label class = "control-label col-sm-2" for = "pay_date"><%= __("Payment date") %></label>
            <input type = "date" class = "form-control col-sm-10" name="pay_date" id ="pay_date" required>
        </div>
        <div class = "form-group row">
            <label class="control-label col-sm-2" for = "amount"><%= __("Amount") %></label>
            <input type = "number" class = "form-control col-sm-10" name="amount" id ="amount" required>
        </div>
        <div class = "form-group row">
            <label class = "control-label col-sm-2" for = "category"><%= __("Payment Category") %></label>
            <input type = "text" class = "form-control col-sm-10" name="category" id ="category" required>
        </div>
        <div class = "form-group row">
            <label class = "control-label col-sm-2" for = "note"><%= __("Note") %></label>
            <input type = "text" class = "form-control col-sm-10" name="note" id ="note">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary col-md-4"><%= __("Save") %></button>  
        </div>
    </form> 
</div>
<% include partials/footer.ejs %>