<% include partials/header.ejs %>
<% include partials/messages.ejs %>
    <div class="container">
        <div class="table-wrapper">
            <form class="add-bus-form" action="" method="post" enctype="multipart/form-data">
                <div class = "form-group row">
                    <label class="control-label col-sm-2" for = "subject_id"><%= __("Subject Id") %></label>
                    <input type = "text" class = "form-control col-sm-6" name="subject_id" id ="subject_id" value="Auto generated" readonly>
                </div>
                <div class = "form-group row">
                    <label class = "control-label col-sm-2" for = "subject_ename"><%= __("Subject English Name") %></label>
                    <input type = "text" class = "form-control col-sm-6" name="subject_ename" id ="subject_ename" required>
                </div>
                <div class = "form-group row">
                    <label class = "control-label col-sm-2" for = "subject_aname"><%= __("Subject Arabic Name") %></label>
                    <input type = "text" class = "form-control col-sm-6" name="subject_aname" id ="subject_aname" required>
                </div>
                <div class="form-row"> 
                    <label class = "control-label col-sm-3" for = "subject_aname"></label>     
                    <button type="submit" class="btn btn-primary col-sm-4 float-right"><%= __("Save") %></button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
